#Description: 3D test problem for unstructured richards equation with mixed
#             elements in explicit format
# For testing the SOURCE_SINK_SANDBOX using a CELL_ID

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS
    1
    3
    5
    7
    9
    11
    13
    15
  /
END

#=========================== flow mode ========================================

#=========================== chemistry ========================================
#=========================== discretization ===================================
GRID
  TYPE unstructured_explicit ./mixed.uge
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 0.5d0
  CHARACTERISTIC_CURVES default
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 5.d-13
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION BROOKS_COREY
    ALPHA 1.d-4
    LAMBDA 0.3d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
    SMOOTH
  /
  PERMEABILITY_FUNCTION MUALEM_BC_LIQ
    LAMBDA 0.3d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
  FORMAT TECPLOT BLOCK
  VELOCITY_AT_CENTER
END

#=========================== times ============================================
TIME
  FINAL_TIME 40.d0 d
  MAXIMUM_TIMESTEP_SIZE 10.d0 d
END

REFERENCE_PRESSURE 101325.

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    5.d0 5.d0 5.d0
  /
END

REGION top
  FILE top_of_1.ex
END

REGION west
  file west_of_12.ex
END

REGION center_of_13
  FILE 13.txt
END

REGION center_of_6
  FILE 6.txt
END

skip
! not supported with explicit unstructured grids
REGION middle
  COORDINATE 2.50001d0 2.50001d0 2.50001d0
END
noskip

#=========================== observation points ===============================
skip
OBSERVATION
  REGION middle
/
noskip

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE hydrostatic
  /
  DATUM 0.d0 0.d0 2.5d0
  PRESSURE 101325.d0
END

FLOW_CONDITION west
  TYPE
    PRESSURE hydrostatic
  /
  DATUM list
    TIME_UNITS d
    0.d0 0.d0 0.d0 2.5d0
    10.d0 0.d0 0.d0 4.d0
    20.d0 0.d0 0.d0 -2.d0
    40.d0 0.d0 0.d0 3.d0
  /
  PRESSURE 101325.d0
  INTERPOLATION LINEAR
END

FLOW_CONDITION recharge
  TYPE
    PRESSURE neumann
  /
  FLUX 15 cm/y
END

FLOW_CONDITION well
  TYPE
    RATE volumetric_rate
  /
  RATE 0.1 l/min
END

FLOW_CONDITION sandbox
  TYPE
    RATE mass_rate
  /
  RATE 1.d-1 kg/min
END

#skip
SOURCE_SINK_SANDBOX
  MASS_RATE
#    COORDINATE 1.25d0 3.75d0 3.75d0
    CELL_ID 6
    RATE 1.d-1 kg/min
  /
END
#noskip

#=========================== transport conditions =============================
#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END


BOUNDARY_CONDITION west
  FLOW_CONDITION west
  TRANSPORT_CONDITION tracer1
  REGION west
END

BOUNDARY_CONDITION
  FLOW_CONDITION recharge
  TRANSPORT_CONDITION tracer2
  REGION top
END

SOURCE_SINK
  FLOW_CONDITION well
  TRANSPORT_CONDITION tracer3
  REGION center_of_13
END

skip
SOURCE_SINK
  FLOW_CONDITION sandbox
  TRANSPORT_CONDITION tracer3
  REGION center_of_6
END
noskip

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END
END_SUBSURFACE
