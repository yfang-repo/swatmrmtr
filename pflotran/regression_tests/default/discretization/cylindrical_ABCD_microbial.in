#Description: 1D microbial degradation problem without biomass

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 5
END

#=========================== chemistry ========================================
# Uncomment to debug reactions
#NUMERICAL_JACOBIAN_RXN
CHEMISTRY
  PRIMARY_SPECIES
    A(aq)
    B(aq)
    C(aq)
  /
  IMMOBILE_SPECIES
    D(im)
  /
  MICROBIAL_REACTION
    REACTION A(aq) + 2 B(aq) <-> 1.5 C(aq)
    RATE_CONSTANT 1.d-6
    MONOD 
      SPECIES_NAME A(aq) 
      HALF_SATURATION_CONSTANT 1.d-5        ! A is the donor
      THRESHOLD_CONCENTRATION 1.d-20
    /
    MONOD
      SPECIES_NAME B(aq) 
      HALF_SATURATION_CONSTANT 1.d-4        ! B is the acceptor
      THRESHOLD_CONCENTRATION 1.d-11
    /
    INHIBITION
      SPECIES_NAME C(aq)
      TYPE INVERSE_MONOD
      INHIBITION_CONSTANT 6.d-4   ! C is the product and inhibits when too high
    /
    BIOMASS
      SPECIES_NAME D(im)
      YIELD 0.01d0
    /
  /
  IMMOBILE_DECAY_REACTION
    SPECIES_NAME D(im)
    RATE_CONSTANT 1.d-9
  /
  DATABASE ../../../database/hanford.dat
  LOG_FORMULATION
  ACTIVITY_COEFFICIENTS OFF
  OUTPUT
    all
    TOTAL
  /
END

#=========================== solver options ===================================
LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE structured cylindrical
  NXYZ 5 1 1
  BOUNDS
    0.d0 0.d0
    100.d0 1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES default
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION BROOKS_COREY
    ALPHA 1.d-4
    LAMBDA 0.3d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
    SMOOTH
  /
  PERMEABILITY_FUNCTION MUALEM_BC_LIQ
    LAMBDA 0.3d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
skip
OUTPUT
  SNAPSHOT_FILE
    PERIODIC TIMESTEP 1
    FORMAT HDF5
  /
END
noskip

#=========================== times ============================================
TIME
  FINAL_TIME 25.d0 y
  INITIAL_TIMESTEP_SIZE 0.5d0 y
  MAXIMUM_TIMESTEP_SIZE 0.5d0 y
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
END

REGION injection_region
  COORDINATE 10.d0 0.5d0 0.5d0
END

REGION biozone
  COORDINATES
    20.d0 0.d0 0.d0
    80.d0 1.d0 1.d0
  /
END

REGION east
  FACE east
  COORDINATES
    100.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

REGION pt
  COORDINATE 50.d0 0.5d0 0.5d0
END

#=========================== observation points ===============================
OBSERVATION
  REGION pt
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE hydrostatic
  /
  DATUM 0. 0. 10.
  PRESSURE 101325d0
END

FLOW_CONDITION well
  TYPE
    RATE mass_rate
  /
  RATE 314.d3 kg/yr
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION biozone
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial_biozone
  /
END

TRANSPORT_CONDITION inlet
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 inlet
  /
END

#=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    A(aq) 1.d-7  T
    B(aq) 1.d-7  T
    C(aq) 1.d-7  T
  /
  IMMOBILE
    D(im) 1.d-7
  /
END

CONSTRAINT initial_biozone
  CONCENTRATIONS
    A(aq) 1.d-7  T
    B(aq) 1.d-7  T
    C(aq) 1.d-7  T
  /
  IMMOBILE
    D(im) 1.d-3
  /
END

CONSTRAINT inlet
  CONCENTRATIONS
    A(aq) 1.d-4  T
    B(aq) 1.d-3  T
    C(aq) 1.d-7  T
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION biozone
  REGION biozone
END

BOUNDARY_CONDITION outlet
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION east
END

SOURCE_SINK inlet
  FLOW_CONDITION well
  TRANSPORT_CONDITION inlet
  REGION injection_region
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE
