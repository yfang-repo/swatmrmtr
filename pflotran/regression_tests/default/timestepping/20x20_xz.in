#Description: 2D Flow and Transport problem

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 5
  CELLS
    210
  /
END

#=========================== flow mode ========================================

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Tracer
  /
  DATABASE ../../../database/hanford.dat
  OUTPUT
    All
    TOTAL
  /
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
END

NEWTON_SOLVER FLOW
END

LINEAR_SOLVER FLOW
  SOLVER DIRECT
END

NEWTON_SOLVER TRANSPORT
END

LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE structured
  ORIGIN 0.d0 0.d0 0.d0
  NXYZ 20 1 20
  BOUNDS 
    0.d0 0.d0 0.d0
    20.d0 1.d0 20.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== datasets =========================================

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  CHARACTERISTIC_CURVES sf1
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.5d0
    ALPHA  1.d-4
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
  TIMES d 1200.d0 1500.d0
  FORMAT HDF5
  VARIABLES
    LIQUID_PRESSURE
    LIQUID_DENSITY
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 2000.d0 d
  INITIAL_TIMESTEP_SIZE 1.d0 d
  MAXIMUM_TIMESTEP_SIZE 100.d0 d at 100.0 d
  MAXIMUM_TIMESTEP_SIZE 0.1d0 d at 1300.0 d
  MAXIMUM_TIMESTEP_SIZE 0.02d0 d at 1300.105d0 d
  MAXIMUM_TIMESTEP_SIZE 100.d0 d at 1300.2d0 d
  MAXIMUM_TIMESTEP_SIZE 0.1d0 d at 1400.0 d
  MAXIMUM_TIMESTEP_SIZE 0.02d0 d at 1400.06d0 d
  MAXIMUM_TIMESTEP_SIZE 100.d0 d at 1400.1d0 d
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
END

REGION top
  FACE TOP
  COORDINATES
    -1.d20 -1.d20 20.d0
    1.d20 1.d20 20.d0
  /
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    -1.d20 -1.d20 0.d0
    1.d20 1.d20 0.d0
  /
END

REGION saline
  COORDINATES
    9.d0 0.d0 9.d0
    11.d0 1.d0 11.d0
  /
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE hydrostatic
  /
  DATUM 0.d0 0.d0 35.d0
  PRESSURE 101325 ! Pa
END

FLOW_CONDITION shift
  TYPE
    PRESSURE hydrostatic
  /
  DATUM 0.d0 0.d0 30.d0
  PRESSURE 101325 ! Pa
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION saline
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 saline
  /
END

#=========================== transport constraints ============================
CONSTRAINT initial
  CONCENTRATIONS
    Tracer   1.d-5            T
  /
END

CONSTRAINT saline
  CONCENTRATIONS
    Tracer   5.d-1            T
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION saline
  REGION saline
END

# top boundary condition
BOUNDARY_CONDITION top
  FLOW_CONDITION shift
  TRANSPORT_CONDITION initial
  REGION top
END

#=========================== stratigraphy couplers ============================
STRATA
  MATERIAL soil1
  REGION all
END

END_SUBSURFACE
